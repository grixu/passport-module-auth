{
    "name": "grixu/passport-module-auth",
    "description": "This package provides model, commands & middleware to easily forbid access to certain modules(domains in DDD) when using Client Credentials Grant Tokens",
    "keywords": [
        "grixu",
        "passport-module-auth"
    ],
    "homepage": "https://github.com/grixu/passport-module-auth",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "grixu",
            "email": "mg@grixu.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "illuminate/database": "^8.0",
        "illuminate/http": "^8.0",
        "illuminate/support": "^8.0",
        "illuminate/console": "^8.0",
        "laravel/passport": "^10.1"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "Grixu\\PassportModuleAuth\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Grixu\\PassportModuleAuth\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Grixu\\PassportModuleAuth\\PassportModuleAuthServiceProvider"
            ]
        }
    }
}
